<!DOCTYPE html>
<html>
<% include Layout/Head %>

<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">

        <!-- Navbar -->
        <% include Layout/Navbar %>
        <!-- /.navbar -->

        <!-- Main Sidebar Container -->
        <%include Layout/MainSidebar %>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0 text-dark">Quản lý học sinh</h1>
                        </div><!-- /.col -->
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="#">Home</a></li>
                                <li class="breadcrumb-item active">SubjectManager</li>
                            </ol>
                        </div><!-- /.col -->
                    </div><!-- /.row -->
                </div><!-- /.container-fluid -->
            </div>
            <!-- /.content-header -->
            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    <div class="card">
                        <div class="card-header">
                            <div class="form-group col-md-2">
                                <label for="my-select">Lọc theo lớp học</label>
                                <select id="classFiller" class="form-control" name="">
                                    <option value=1>-----Chọn tất cả----</option>
                                    <% Lop.map((element,index)=>{ %>
                                    <option value="<%= element._id %>"><%= element.tenLop%></option>
                                    <% }) %>
                                </select>
                            </div>
                        </div>
                        <div class="card-body">
                            <table id="tblresult" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>STT</th>
                                        <th>ID</th>
                                        <th>Họ</th>
                                        <th>Tên</th>
                                        <th>Ngày sinh</th>
                                        <th>Địa chỉ</th>
                                        <th>Giới tính</th>
                                        <th>id Lớp</th>
                                        <th>Lớp</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                        <div class="card-footer">
                            <div class="col-12">
                                <button type="button" class="btn btn-primary" id="btnAdd" name="btnAdd"><i
                                        class="fa fa-plus"></i>&nbsp; Thêm</button>
                            </div>
                        </div>
                    </div>
                </div>
        </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

    <% include Layout/Footer %>
    <!-- Control Sidebar -->
    <aside class="control-sidebar control-sidebar-dark">
        <!-- Control sidebar content goes here -->
    </aside>
    <!-- /.control-sidebar -->
    </div>
    <!-- ./wrapper -->

    <!-- The Modal appConfirm-->
    <div class="modal fade" id="appConfirm">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title"></h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <h5></h5>
                    <form method="delete" class="form-horizontal" id="frmDelete">
                        <input type="hidden" id="ID" name="ID">
                    </form>
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Đóng</button>
                    <button type="submit" class="btn btn-success" form="frmDelete" id="btnSubmitConfirm">Xóa</button>
                </div>

            </div>
        </div>
    </div>
    <!-- The Modal create -->
    <div class="modal fade" id="createmodal">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Thêm mới học sinh</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <!-- Modal body -->
                <div class="modal-body">
                    <form id="frmPost" method="post">
                        <div class="card-body">
                            <div class="row form-group">
                                <div class="col-md-6">
                                    <label for="c_hoHS">Họ</label>
                                    <input type="text" class="form-control" id="c_hoHS" name="hoHS" placeholder="Họ...">
                                </div>
                                <div class="col-md-6">
                                    <label for="c_tenHS">Tên</label>
                                    <input type="text" class="form-control" id="c_tenHS" name="tenHS"
                                        placeholder="Tên...">
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-sm-6">
                                    <label for="c_ngaySinhHS">Ngày sinh</label>
                                    <input type='date' id='c_ngaySinhHS' name="ngaySinhHS" class="form-control"
                                        placeholder="Ngày sinh" />
                                </div>
                                <div class="col-sm-6">
                                    <label for="c_diaChiHS">Địa chỉ</label>
                                    <input type='text' id='c_diaChiHS' name="diaChiHS" class="form-control"
                                        placeholder="Địa chỉ" />
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-md-6">
                                    <label for="c_gioiTinhHS">Chọn giới tính</label>
                                    <select id="c_gioiTinhHS" class="form-control" name="gioiTinhHS">
                                        <option value=1>Nam</option>
                                        <option value=0>Nữ</option>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label for="c_Lop_idLop">Chọn lớp</label>
                                    <select id="c_Lop_idLop" class="form-control" name="Lop_idLop">
                                        <option value=1>--Chọn lớp--</option>
                                        <% Lop.map((element,index)=>{ %>
                                        <option value="<%= element._id %>"><%= element.tenLop%></option>
                                        <% }) %>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </form>

                </div>
                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success" form="frmPost" id="btnSubmitDetail">Thêm mới</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Đóng</button>
                </div>

            </div>
        </div>
    </div>

    <!-- The Modal update -->
    <div class="modal fade" id="updatemodal">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Cập nhật học sinh</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <!-- Modal body -->
                <div class="modal-body">
                    <form role="form" id="frmPut" method="PUT">
                        <input type="hidden" class="form-control" id="IDu" name="IDu">
                        <div class="card-body">
                            <div class="row form-group">
                                <div class="col-md-6">
                                    <label for="hoHS">Họ</label>
                                    <input type="text" class="form-control" id="u_hoHS" name="hoHS" placeholder="Họ...">
                                </div>
                                <div class="col-md-6">
                                    <label for="tenHS">Tên</label>
                                    <input type="text" class="form-control" id="u_tenHS" name="tenHS"
                                        placeholder="Tên...">
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-sm-6">
                                    <label for="ngaySinhHS">Ngày sinh</label>
                                    <input type='date' id='u_ngaySinhHS' name="ngaySinhHS" class="form-control"
                                        placeholder="Ngày sinh" />
                                </div>
                                <div class="col-sm-6">
                                    <label for="diaChiHS">Địa chỉ</label>
                                    <input type='text' id='u_diaChiHS' name="diaChiHS" class="form-control"
                                        placeholder="Địa chỉ" />
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-md-6">
                                    <label for="gioiTinhHS">Chọn giới tính</label>
                                    <select id="u_gioiTinhHS" class="form-control" name="gioiTinhHS">
                                        <option value=1>Nam</option>
                                        <option value=0>Nữ</option>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label for="Lop_idLop">Chọn lớp</label>
                                    <select id="u_Lop_idLop" class="form-control" name="Lop_idLop">
                                        <option value=1>--Chọn lớp--</option>
                                        <% Lop.map((element,index)=>{ %>
                                        <option value="<%= element._id %>"><%= element.tenLop%></option>
                                        <% }) %>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success" form="frmPut" id="btnSubmitDetail">Cập nhật</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>



    <!-- jQuery -->
    <% include Layout/DefaultScript %>
    <script src="MyJavaScript/QuanLyHocSinh.js"></script>

</body>

</html>